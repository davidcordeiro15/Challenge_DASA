<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.Controller.CadastroController"
      alignment="CENTER" spacing="20">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Crie sua conta" styleClass="titulo"/>

    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="campoNome" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="campoEmail" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="220"/>

        <Label text="Senha:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="campoSenha" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="220"/>
    </GridPane>

    <Button text="Cadastrar" onAction="#cadastrar" maxWidth="200"/>

    <Button text="Voltar ao Login" onAction="#voltarLogin" maxWidth="200"/>
</VBox>
