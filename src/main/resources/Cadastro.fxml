<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controller.CadastroController"
          hgap="10" vgap="10" alignment="CENTER">
    <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="campoNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="campoEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Senha:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="campoSenha" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Cadastrar" onAction="#cadastrar" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
