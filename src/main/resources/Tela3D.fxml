<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controller.ViewerController">
    <center>
        <!-- Container que receberá a SubScene 3D em runtime -->
        <StackPane fx:id="canvasContainer" style="-fx-background-color: #2b2b2b;" />
    </center>

    <top>
        <ToolBar>
            <Button text="Abrir OBJ" onAction="#onOpenModel"/>
            <Separator/>
            <ToggleButton fx:id="togglePlace" text="Modo Colocar Bolinha" onAction="#onTogglePlace"/>
            <Button text="Adicionar Bolinha (frente da câmera)" onAction="#onAddSphere"/>
            <Button text="Limpar Bolinhas" onAction="#onClearSpheres"/>
            <Separator/>
            <Label fx:id="lblInfo" text="Carregue um modelo OBJ para começar" />
        </ToolBar>
    </top>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding:8;">
            <Label text="Controles:"/>
            <Label text="Arrastar = orbitar | Shift+Arrastar = pan | Scroll = zoom | WASD = mover (Shift = rápido) | Botão do scroll = adicionar ponto | R = reset" style="-fx-font-size:11; -fx-opacity:0.9"/>
        </HBox>
    </bottom>
</BorderPane>